{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "NodeNext",
    "outDir": "dist/frontend",
    "paths": {
      "@canisters/*": [
        "declarations/*"
      ],
      "~/*": [
        "frontend/src/*"
      ]
    },
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "ESNext"
  },
  "exclude": [
    "src/declarations/**/*.did",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}